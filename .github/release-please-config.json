{
  "packages": {
    ".": {
      "release-type": "node",
      "draft": false,
      "prerelease": false,
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "changelog-sections": [
        {"type": "feat", "section": "Features", "hidden": false, "releaseAs": "minor"},
        {"type": "fix", "section": "Bug Fixes", "hidden": false, "releaseAs": "patch"},
        {"type": "chore", "section": "Miscellaneous", "hidden": false, "releaseAs": "patch"},
        {"type": "docs", "section": "Documentation", "hidden": false, "releaseAs": "patch"},
        {"type": "perf", "section": "Performance Improvements", "hidden": false, "releaseAs": "patch"},
        {"type": "refactor", "section": "Code Refactoring", "hidden": false, "releaseAs": "patch"},
        {"type": "style", "section": "Styles", "hidden": false, "releaseAs": "patch"},
        {"type": "test", "section": "Tests", "hidden": false, "releaseAs": "patch"}
      ],
      "skip-github-release": false,
      "include-component-in-tag": false,
      "include-v-in-tag": true
    }
  }
} 