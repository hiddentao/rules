{
  "name": "rules",
  "version": "0.1.0",
  "description": "CLI tool for managing Cursor rules",
  "module": "index.ts",
  "type": "module",
  "bin": {
    "rules": "./bin/rules.js"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "start": "bun run ./src/index.ts",
    "dev": "bun build --watch ./src/index.ts --outdir ./dist --target node",
    "test": "bun test",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/bun": "latest",
    "@types/chai": "^5.2.1",
    "@types/inquirer": "^9.0.7",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.5",
    "chai": "^5.2.0",
    "execa": "^9.5.2",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@types/tmp": "^0.2.6",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "isomorphic-git": "^1.30.1",
    "picocolors": "^1.0.0",
    "simple-git": "^3.27.0",
    "tmp": "^0.2.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "license": "MIT"
}
